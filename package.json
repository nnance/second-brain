{
  "name": "second-brain",
  "version": "0.1.0",
  "description": "Personal Knowledge Capture System via iMessage",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:pretty": "tsx src/index.ts | pino-pretty",
    "start": "tsx src/index.ts",
    "test": "VAULT_PATH=/tmp/test-vault ANTHROPIC_API_KEY=test-key node --import tsx --test 'src/**/*.test.ts'",
    "lint": "biome check .",
    "format": "biome format . --write",
    "vault:init": "tsx src/scripts/init-vault.ts",
    "service:install": "bash scripts/service-install.sh",
    "service:uninstall": "bash scripts/service-uninstall.sh",
    "service:status": "bash scripts/service-status.sh",
    "service:start": "launchctl start com.second-brain.agent",
    "service:stop": "launchctl stop com.second-brain.agent",
    "service:restart": "launchctl kickstart -k gui/$(id -u)/com.second-brain.agent"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.0.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.5",
    "@photon-ai/imessage-kit": "^2.1.0",
    "dotenv": "^17.2.3",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "zod": "^4.3.5"
  }
}
